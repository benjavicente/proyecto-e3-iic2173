<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Legit Business - E0</title>

    <link rel="shortcut icon" href="<%= assetPath('legit_business_logo.ico') %>">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <% if (env !== 'development') { %>
      <link rel="stylesheet" href="<%= assetPath('app.css') %>">
    <% } %>

    <link 
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" 
      rel="stylesheet" 
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" 
      crossorigin="anonymous"
    />

    <script src="<%= assetPath('app.js') %>"></script>
  </head>

  <body>
    <nav class="navbar navbar-light" style="background-color: #fff;">
      <div class="container-fluid">
        <a class="navbar-brand vertical-center brand-bold" href="/">
          <img 
            src="<%= assetPath('legit_business_logo.png') %>" 
            class="d-inline-block align-text-top"
          />
          Legit Business
        </a>
        
        <% if (!locals.hideNavLoginButton && !locals.currentUser) { %>
          <div class="d-flex">
            <a class="btn btn-primary" href="/login">Iniciar Sesión</a>
          </div>
        <% } %>

        <% if (locals.currentUser) { %>
          <div class="d-flex">
            <form action="<%= paths.destroySession %>" method="POST">
              <a href="/map">Mapa</a>
              <a href="/pings">Interacciones</a>
              
              <button name="_method" value="delete" class="btn btn-outline-secondary" type="submit">
                Cerrar Sesión
              </button>
            </form>
          </div>
        <% } %>
      </div>
    </nav>

    <%- body %>
    
    <script 
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" 
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" 
      crossorigin="anonymous"
    /></script>
  </body>
</html>
